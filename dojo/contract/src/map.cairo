    // calculate index into 1D array
    let index: usize = (y * MAP_WIDTH + x).try_into().unwrap();
    *map.at(index)
}

// helper function to check if a position is walkable
fn is_walkable(x: u32, y: u32) -> bool {
    // get map value at position
    let tile = get_map_value(x, y);
    
    // 1 represents a wall
    tile != 1
}

#[cfg(test)]
mod tests {
    use super::{is_walkable, MAP_WIDTH, MAP_HEIGHT};

    #[test]
    fn test_wall_collision() {
        // test wall (top-left corner is always a wall)
        assert(!is_walkable(0, 0), 'should be wall');
        
        // test walkable space (known empty space)
        assert(is_walkable(1, 1), 'should be walkable');
    }

    #[test]
    fn test_out_of_bounds() {
        assert(!is_walkable(MAP_WIDTH, 0), 'out of bounds x');
        assert(!is_walkable(0, MAP_HEIGHT), 'out of bounds y');
    }
} 