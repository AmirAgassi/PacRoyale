// map constants
const MAP_WIDTH: u32 = 23;
const MAP_HEIGHT: u32 = 23;

// define the map layout - matches the client grid
// 1 = wall, 0 = empty space, 2 = coin
fn get_map_value(x: u32, y: u32) -> u8 {
